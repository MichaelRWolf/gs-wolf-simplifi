{
  "compilerOptions": {
    "target": "ES5",
    "module": "none",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["jest"],
    "lib": ["es2015", "dom"],

    "noImplicitAny": true,
    "skipLibCheck": false,

    "removeComments": false,

    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "*.ts",
    "types/**/*",
    "node_modules/approvals/lib/*.d.ts",
    "node_modules/approvals/lib/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
